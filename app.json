{
  "expo": {
    "name": "Food Recipe",
    "slug": "food-recipe-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./libs/common/design-system/assets/images/app-logo.png",
    "splash": {
      "image": "./libs/common/design-system/assets/images/app-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "foodrecipemobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.detour-2205.foodrecipemobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Ứng dụng cần truy cập camera để chụp ảnh.",
        "NSPhotoLibraryUsageDescription": "Ứng dụng cần truy cập thư viện ảnh để hiển thị và lưu ảnh.",
        "NSLocationWhenInUseUsageDescription": "Ứng dụng cần quyền truy cập vị trí để cung cấp các tính năng liên quan.",
        "NSLocationAlwaysUsageDescription": "Ứng dụng cần quyền truy cập vị trí ngay cả khi không mở."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./libs/common/design-system/assets/images/app-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.detour_2205.foodrecipemobile"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./libs/common/design-system/assets/images/app-logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./libs/common/design-system/assets/images/app-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b06ff48f-03d6-4d69-abc2-6b69d037a8ea"
      }
    },
    "owner": "detour_2205"
  }
}
